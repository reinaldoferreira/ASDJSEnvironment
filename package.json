{
  "name": "asd-js-environment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --include-path scss src/scss/main.scss src/css/main.min.css --output-style compressed",
    "scss:watch": "nodemon -e scss -x \"npm run scss\"",
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "npm-run-all --parallel nsp scss:watch lint:watch test:watch start-mockapi open:src",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint": "esw webpack.config.* src build --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "nsp": "nsp check",
    "generate-mock-data": "babel-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/js/api/data.json --port 3030",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint scss",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "predeploy": "babel-node buildScripts/build.js",
    "deploy": "surge ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reinaldoferreira/ASDJSEnvironment.git"
  },
  "author": "Reinaldo Ferreira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reinaldoferreira/ASDJSEnvironment/issues"
  },
  "homepage": "https://github.com/reinaldoferreira/ASDJSEnvironment#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "css-loader": "^0.28.11",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "^3.1.0",
    "expect": "^1.20.2",
    "express": "^4.15.2",
    "file-loader": "^0.11.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^9.8.0",
    "json-schema-faker": "^0.3.6",
    "json-server": "^0.10.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nsp": "^3.2.1",
    "open": "0.0.5",
    "rimraf": "^2.6.1",
    "style-loader": "^0.17.0",
    "surge": "^0.19.0",
    "url-loader": "^0.5.8",
    "webpack": "^4.12.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-md5-hash": "^0.0.6",
    "whatwg-fetch": "^2.0.3"
  }
}
